<p id="notice"><%= notice %></p>

<h1>Property Settings</h1>

<h2>Details</h2>
<p>
  <strong>Name:</strong>
  <%= @property.name %>
  <br>
  <% if (@address != nil) %>
    <strong>Address 1:</strong>
    <%= @address.address1 %>
    <br>
    <strong>Address 2:</strong>
    <%= @address.address2 %>
    <br>
    <strong>City:</strong>
    <%= @address.city %>
    <br>
    <strong>State:</strong>
    <%= @address.state %>
    <br>
    <strong>Zip:</strong>
    <%= @address.zip %>
    <br>
    <strong>Country:</strong>
    <%= @address.country %>
    <br>
    <strong>Phone:</strong>
    <%= @address.phone %>
    <br>
  <% end %>

  <strong>Access code:</strong>
  <%= @property.access_code %>
  <br>
  <strong>Notes:</strong>
  <%= @property.notes %>
  <br>
  <%= link_to 'Edit Property', edit_property_path(@property) %>
</p>

<h2>Users</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.firstname %> <%= user.lastname %> <%= user.username %> (<%= user.email %>) 
      <%= link_to "Remove", users_dissociate_property_path(:user => {:id => user.id} ), :method => :patch, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
