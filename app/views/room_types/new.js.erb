// This runs when new is clicked
// Hide the new room type link

var $form_container = $("div.new_room_type_form_container");
var $new_link = $("a.new_room_type_link");

// Hide the new link
$new_link.hide();

// Clear the form container
$form_container.empty();
// Display the form continer
$form_container.show();
// Insert the _form.html.erb partial inside the form container
$form_container.append('<%= j( render(partial: "form", locals: {property: @property, room_type: @room_type}) ) %>');

// Cancel link function
function hideNewRoomTypeFormContainer() {
	// Clear the form container
	$form_container.empty();
	// Hide the form container
	$form_container.hide();
	// Show the new link
	$new_link.show();
}
