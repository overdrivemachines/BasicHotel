// Updates @room_type
// Requires: @room_type
var $form = $("form#<%= dom_id(@room_type, :edit) %>");
var $row = $("tr#<%= dom_id(@room_type) %>");
<% if @room_type.errors.any? %>
	// @room_type did not save, display errors
	$form.prepend('<%= j( render(partial: "form_errors", locals: {room_type: @room_type}) ) %>');
<% else %>
	// @room_type saved, hide the form and display the updated row
	$row.empty();
	$row.replaceWith('<%= j(render @room_type, room_type: @room_type) %>');
<% end %>