<!-- Needs property and room_type -->
<!-- property set to nil for edit -->
<%= form_for([property, room_type], remote: true) do |f| %>
  <% if room_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room_type.errors.count, "error") %> prohibited this room_type from being saved:</h2>

      <ul>
      <% room_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %> | 
    <% if room_type.id.nil? %>
      <a id="new_room_type_cancel" href="javascript:void(0);" onclick="hideNewRoomTypeFormContainer()">Cancel</a>
    <% else %>
      <a id="<%= dom_id(room_type) %>_cancel" href="javascript:void(0);" onclick="hideEditRoomTypeForm('<%= dom_id(room_type) %>')">Cancel</a>
    <% end %>
  </div>
<% end %>